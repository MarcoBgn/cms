          = active_link_to(properties[:display_name], properties[:path], :class_active => 'nav-primary__text is-active', :class_inactive => 'nav-primary__text')

        / @TODO @modsognir @douglasroper @finitud Add entries for Categories, Reporting and Admin
        /= active_link_to t('comfy.admin.cms.base.categories'), comfy_admin_cms_site_categories_path(@site)
        /= active_link_to t('comfy.admin.cms.base.reporting'),
        /   comfy_admin_cms_site_reporting_path(@site)
        /= active_link_to t('comfy.admin.cms.base.admin'),
        /   comfy_admin_cms_site_admin_path(@site)

        = cms_hook :navigation
