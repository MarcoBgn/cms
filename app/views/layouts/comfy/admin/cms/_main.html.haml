- flash.each do |type, message|
  .alert{:class => "alert--#{type} js-alert is-active"}
    .alert__inner
      %button.alert__close-button.js-close-alert{:type => 'button', } &times;
      = message

= form_for :word, url: word_documents_path, remote: true, :html => {:class => 'js-word-upload-form visually-hidden', multipart: true} do |form|
  =label_tag('word_document', 'Upload Word document', class: 'visually-hidden')
  = form.file_field :document, accept: WordDocumentsController::ACCEPTED_CONTENT_TYPES.join(','), :class => 'js-word-upload-file-input', :tabindex => '-1'
  = form.submit("Upload word doc", id: "upload_submit")

%main
  = yield
