<%
  namespace = { }
  cms_object = @page || cms_object
  tags = cms_object.tags(true).select{|t| t.is_cms_block?}.uniq{|t| t.identifier}

  tags.each do |tag|
    namespace[tag.namespace || 'default'] ||= []
    namespace[tag.namespace || 'default'] << tag
  end
%>
<div class="l-panel-content">
  <div class="l-constrained">
    <% if tags.empty? %>
      <div class="no-tags">
        <%= link_to cms_object.layout.label, edit_comfy_admin_cms_site_layout_path(@site, cms_object.layout) %>
        <%= t('.no_tags').html_safe %>
      </div>
    <% else %>
      <%= fields_for :blocks, nil, :builder => Cms::FormBuilder, :layout => :horizontal do |cms_blocks| %>
        <% if namespace.size > 1 %>
          <% namespace.each_with_index do |(name, tags), index| %>
            <div<%= index == 0 ? ' class="active"' : '' %>>
              <%= link_to name.humanize, "#ns-#{name}", :data => {:toggle => 'tab'} %>
            </div
          <% end %>
        <% end %>

        <div class="l-home-edit">
          <% block_index = 0 %>
          <% namespace.each_with_index do |(name, tags), index| %>
            <div class="l-home-edit__section l-home-edit__section--header">
              <h2 class="l-home-edit__section-heading">Header</h2>
              <div class="l-split-content">
                <div class="l-split-content__col">
                  <% tag = tags.find { |t| t.identifier == 'raw_heading' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 0) %>
                  <% tag = tags.find { |t| t.identifier == 'raw_bullet_1' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 2) %>
                  <% tag = tags.find { |t| t.identifier == 'raw_bullet_2' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 3) %>
                  <% tag = tags.find { |t| t.identifier == 'raw_bullet_3' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 4) %>
                </div>
                <div class="l-split-content__col">
                  <% tag = tags.find { |t| t.identifier == 'raw_hero_image' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 1) %>
                  <p><i>Hero image dimensions: 920x508</i></p>
                </div>
              </div>
              <div class="l-split-content">
                <div class="l-split-content__col">
                  <% tag = tags.find { |t| t.identifier == 'raw_cta_text' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 5) %>
                </div>
                <div class="l-split-content__col">
                  <% tag = tags.find { |t| t.identifier == 'raw_cta_link' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 6) %>
                </div>
              </div>
            </div>

            <div class="l-home-edit__section l-home-edit__section--tools">
              <h2 class="l-home-edit__section-heading">Popular tools &amp; calculators x3</h2>
              <ul class="l-home-edit__tile-list l-home-edit__tile-list--thirds">
                <li class="l-home-edit__tile">
                  <div class="l-home-edit__tile-inner">
                    <% tag = tags.find { |t| t.identifier == 'raw_tool_1_heading' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 27) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tool_1_url' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 28) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tool_1_text' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 29) %>
                  </div>
                </li>
                <li class="l-home-edit__tile">
                  <div class="l-home-edit__tile-inner">
                    <% tag = tags.find { |t| t.identifier == 'raw_tool_2_heading' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 30) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tool_2_url' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 31) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tool_2_text' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 32) %>
                  </div>
                </li>
                <li class="l-home-edit__tile">
                  <div class="l-home-edit__tile-inner">
                    <% tag = tags.find { |t| t.identifier == 'raw_tool_3_heading' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 33) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tool_3_url' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 34) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tool_3_text' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 35) %>
                  </div>
                </li>
              </ul>
            </div>

            <div class="l-home-edit__section l-home-edit__section--tiles">
              <h2 class="l-home-edit__section-heading">Promo tiles x4</h2>
              <ul class="tips">
                <li>Images should be 468x293 ideally, and definitely all the same height.</li>
                <li>The only valid option for a promo label is: blog</li>
                <li>Use absolute URLs for promo links</li>
              </ul>
              <ul class="l-home-edit__tile-list">
                <li class="l-home-edit__tile">
                  <div class="l-home-edit__tile-inner">
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_1_heading' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 7) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_1_image' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 8) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_1_url' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 9) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_1_label' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 10) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_1_content' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 11) %>
                  </div>
                </li>
                <li class="l-home-edit__tile">
                  <div class="l-home-edit__tile-inner">
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_2_heading' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 12) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_2_image' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 13) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_2_url' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 14) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_2_label' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 15) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_2_content' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 16) %>
                  </div>
                </li>
                <li class="l-home-edit__tile">
                  <div class="l-home-edit__tile-inner">
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_3_heading' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 17) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_3_image' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 18) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_3_url' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 19) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_3_label' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 20) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_3_content' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 21) %>
                  </div>
                </li>
                <li class="l-home-edit__tile">
                  <div class="l-home-edit__tile-inner">
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_4_heading' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 22) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_4_image' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 23) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_4_url' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 24) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_4_label' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 25) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_tile_4_content' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 26) %>
                  </div>
                </li>
              </ul>
            </div>

            <div class="l-home-edit__section l-home-edit__section--tools">
              <h2 class="l-home-edit__section-heading">Text-only promos x2</h2>
              <ul class="l-home-edit__tile-list l-home-edit__tile-list--halves">
                <li class="l-home-edit__tile">
                  <div class="l-home-edit__tile-inner">
                    <% tag = tags.find { |t| t.identifier == 'raw_text_tile_1_heading' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 36) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_text_tile_1_url' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 37) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_text_tile_1_content' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 38) %>
                  </div>
                </li>
                <li class="l-home-edit__tile">
                  <div class="l-home-edit__tile-inner">
                    <% tag = tags.find { |t| t.identifier == 'raw_text_tile_2_heading' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 39) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_text_tile_2_url' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 40) %>
                    <% tag = tags.find { |t| t.identifier == 'raw_text_tile_2_content' } %><%= cms_blocks.send(tag.class.to_s.demodulize.underscore, tag, 41) %>
                  </div>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
      <% end # fields_for %>
    <% end %>
  </div>
</div>
