.dialog-target-content{'data-dough-dialog-target' => 'insert-link', 'data-dough-component' => 'TabSelector'}
  .l-tab-panels.l-tab-panels--add-link
    .l-tab-panels__item.l-tab-panels__item--aside{'data-dough-component' => 'LinkInserter', 'data-dough-linkinserter-target' => 'insert-link'}
      %h2.l-tab-panels__heading Add a link to&hellip;
      .tab-selector__triggers-outer{'data-dough-tab-selector-triggers-outer' => true }
        .tab-selector__triggers-inner{'data-dough-tab-selector-triggers-inner' => true }
          .tab-selector__trigger-container.is-active{'data-dough-tab-selector-trigger-container' => true }
            %a.tab-selector__trigger{ href: '#panel-1', 'data-dough-tab-selector-trigger' => 1 } Money Advice webpage
          .tab-selector__trigger-container.is-inactive{ 'data-dough-tab-selector-trigger-container' => true }
            %a.tab-selector__trigger{ href: '#panel-2', 'data-dough-tab-selector-trigger' => 2 } A file
          .tab-selector__trigger-container.is-inactive{ 'data-dough-tab-selector-trigger-container' => true }
            %a.tab-selector__trigger{ href: '#panel-3', 'data-dough-tab-selector-trigger' => 3 } External site

    %div.l-tab-panels__item.l-tab-panels__item--content
      .tab-selector__target.is-active#panel-1{'data-dough-tab-selector-target' => 1 }
        %h3.l-tab-panels__heading Select page
        %button{'data-dough-linkinserter-create' => true } Insert Link

    %div.l-tab-panels__item.l-tab-panels__item--content
      .tab-selector__target#panel-2{'data-dough-tab-selector-target' => 2 }
        %h3.l-tab-panels__heading Select File
        %button{'data-dough-linkinserter-create' => true } Insert Link

    %div.l-tab-panels__item.l-tab-panels__item--content
      .tab-selector__target#panel-3{'data-dough-tab-selector-target' => 3 }
        %h3.l-tab-panels__heading Add external link
        %input{type: 'text', placeholder: 'enter url' }
        %button{'data-dough-linkinserter-create' => true } Add Link


