%tr
  %li{class: 'listing__item', id: dom_id(page)}
    %p.listing__text
      %td= link_to highlighted_terms(page.label, params[:search]), edit_comfy_admin_cms_site_page_path(page.site, page)
      %td= page.layout.label
      %td= page_category_list(page)
      %td= "#{page.updated_at.strftime("%d/%m/%Y, %H:%M")}"
      %td= current_status(page.current_state)
      %td= { "en" => "English", "cy" => "Welsh" }[page.site.label]
