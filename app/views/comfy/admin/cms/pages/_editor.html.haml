.form-group
  .l-editor
    %nav.toolbar.js-toolbar
      %nav.view-options.js-switch-mode-buttons
        %button.toolbar__btn.toolbar__btn--mode.js-switch-mode{type: "button", data: { "mode" => "markdown" }}
          Advanced
        %button.toolbar__btn.toolbar__btn--mode.is-active.js-switch-mode{type: "button", data: { "mode" => "html" }}
          Layout
      .toolbar__inner.js-html-editor-toolbar
        =button_tag(type: 'button', data: { "command-name" => "bold"}) do
          %span.fa.fa-bold
        =button_tag("Link", type: 'button', data: { "command-name" => "linkPrompt"}) do
          %span.fa.fa-link
        =button_tag("Unlink", type: 'button', data: { "command-name" => "unlink"}) do
          %span.fa.fa-unlink
        =button_tag("OL", type: 'button', data: { "command-name" => "insertOrderedList"}) do
          %span.fa.fa-list-ol
        =button_tag("UL", type: 'button', data: { "command-name" => "insertUnorderedList"}) do
          %span.fa.fa-list-ul
        =button_tag("H2", type: 'button', data: { "command-name" => "h2"})
        =button_tag("H3", type: 'button', data: { "command-name" => "h3"})
        =button_tag("H4", type: 'button', data: { "command-name" => "h4"})
        =button_tag("Remove Formatting", type: "button", data: { "command-name" => "removeFormat"}) do
          %span.fa.fa-square-o
    .editor.editor--html.is-active.js-html-editor
      .editor__content.theme.theme--dough.js-html-editor-content

    .editor.editor--markdown.js-markdown-editor
      %textarea.editor__content.js-markdown-editor-content{ name: "#{fieldname}[blocks_attributes][#{index}][content]" }
        =editor.content
      %input{type: 'hidden', name: "#{fieldname}[blocks_attributes][#{index}][identifier]", value: 'content'}
