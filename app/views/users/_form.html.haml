= comfy_form_for @user, url: url, html: {class: 'form form--vertical'}, label_col: "form__label-heading", control_col: "form__input-wrapper" do |f|
  =f.text_field :name
  =f.text_field :email
  =f.password_field :password
  - if current_user.admin?
    =f.check_box :admin
  =f.submit :class => "t-create-user"
